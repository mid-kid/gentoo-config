declare -F post_src_configure > /dev/null || post_src_configure() { env-post_src_configure; }
env-post_src_configure() {
	if use lto && tc-is-clang; then
		# https://bugs.gentoo.org/956021
		elog '/etc/portage/env: Make sure default-linker is clang for LTO'
		local file="$S/bootstrap.toml"
		test -f "$S/config.toml" && file="$S/config.toml"
		sed -e '/^default-linker =/cdefault-linker = "'"${CHOST}-clang"'"' \
			-i "$file" || die
	fi
}
